<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"

        android:background="@color/colorPrimary"
        android:id="@+id/main"



        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:id="@+id/NsFdMainLin"
        android:layout_margin="7dp"
        >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/NsFdProImg"
                android:src="@drawable/profilemiga"
                android:padding="5dp"
                android:layout_marginTop="5dp"

                ></de.hdodenhof.circleimageview.CircleImageView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/Atwhite"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="14dp"
                android:id="@+id/NsFdUsNmTxVw"
                android:layout_weight="1"

                >
            </TextView>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About User"
                    android:textSize="14dp"
                    android:textColor="@color/Atwhite"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/NsfdUsStTxVw"
                    >
                </TextView>

            </LinearLayout>








        </LinearLayout>



    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/main"
        ></LinearLayout>
    <LinearLayout
        android:id="@+id/newsfeedlinr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/main"
        android:visibility="gone"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorPrimary"
        android:id="@+id/NewsFeedImgVw"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1.5dp"

        >

    </ImageView>
        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/NewsFeedImgVw"



        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ComtEtLnr"
            android:orientation="horizontal"
            android:background="@drawable/buttons"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"


            >

            <ImageButton
                android:id="@+id/x"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/x"
                android:background="@drawable/ovel"
                ></ImageButton>






            <EditText

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/CmtEtx"
                android:inputType="textMultiLine"
                android:hint="Type Comment"
                android:textSize="20dp"
                android:background="@drawable/left_curve"
                android:layout_weight="1"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"



                ></EditText>



            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/Chat_sendButton"
                android:src="@drawable/mic"
                android:background="@drawable/right_curve"

                ></ImageButton>








        </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/NsFdLikeCmtShare"




            >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main"
            android:background="@color/colorPrimary"
            android:src="@drawable/like"
            android:layout_weight="1"
            android:layout_margin="5dp"
            >
        </ImageView>

        <ImageView
            android:id="@+id/commentBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:src="@drawable/comments"
            android:layout_margin="5dp"


            >
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:src="@drawable/up"
            android:layout_margin="5dp"
            android:id="@+id/up"


            >

        </ImageView>



        </LinearLayout>

    </LinearLayout>




    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/online"
        android:id="@+id/NsFdUserIsOnlineImg"
        android:visibility="gone"
        ></ImageView>








</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/VideoShow"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/imageButton"
        />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/VideoShow"
        android:backgroundTint="@color/Atwhite"
        android:ems="10"
        android:hint="Type Description"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/Atwhite"
        android:textColorHint="@color/Atwhite"
        android:textSize="15dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VideoShow"
        android:buttonTint="@color/Atwhite"
        android:text="Private"
        android:textColor="@color/Atwhite"
        android:textSize="15dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VideoShow"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="165dp"
        android:buttonTint="@color/Atwhite"
        android:text="Public"
        android:textColor="@color/Atwhite"

        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="48dp"
        android:layout_height="43dp"


        android:layout_alignParentEnd="true"

        android:background="@color/colorPrimary"
        android:src="@drawable/tick" />




</RelativeLayout>
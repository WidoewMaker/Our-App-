<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/VideoShow"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/reelsPost_imgBtn"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/reelsDescriptionEdTx"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="88dp"
        android:layout_toEndOf="@+id/VideoShow"
        android:backgroundTint="@color/Atwhite"
        android:ems="10"
        android:hint="@string/type_description"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/Atwhite"
        android:textColorHint="@color/Atwhite"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="Autofill,UnusedAttribute" />

    <CheckBox
        android:id="@+id/reelsPrivate_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VideoShow"
        android:buttonTint="@color/Atwhite"
        android:text="@string/_private"
        android:textColor="@color/Atwhite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:checked="true"
        tools:ignore="UnusedAttribute" />

    <CheckBox
        android:id="@+id/reelsPublic_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VideoShow"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="165dp"
        android:buttonTint="@color/Atwhite"
        android:text="@string/_public"
        android:textColor="@color/Atwhite"

        android:textSize="15dp"
        android:textStyle="bold"
        tools:ignore="SpUsage,UnusedAttribute" />

    <ImageButton
        android:id="@+id/reelsPost_imgBtn"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:src="@drawable/tick"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/reelsWarning_TxVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reelsPrivate_checkBox"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:text="@string/warning_this_post_can_be_seen_by_everyone_better_change_it_in_private"
        android:textColor="@android:color/holo_red_light"
        android:textSize="14sp"
        android:visibility="gone"
        />


</RelativeLayout>
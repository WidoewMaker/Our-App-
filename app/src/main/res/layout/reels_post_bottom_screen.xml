<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/VideoShow"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/reelsPost_imgBtn"
        />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="88dp"
        android:layout_toEndOf="@+id/VideoShow"
        android:backgroundTint="@color/Atwhite"
        android:ems="10"
        android:hint="Type Description"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/Atwhite"
        android:textColorHint="@color/Atwhite"
        android:textSize="15dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/reelsPrivate_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VideoShow"
        android:buttonTint="@color/Atwhite"
        android:text="Private"
        android:textColor="@color/Atwhite"
        android:textSize="15dp"
        android:textStyle="bold"
        android:checked="true"/>

    <CheckBox
        android:id="@+id/reelsPublic_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VideoShow"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="165dp"
        android:buttonTint="@color/Atwhite"
        android:text="Public"
        android:textColor="@color/Atwhite"

        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/reelsPost_imgBtn"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:src="@drawable/tick" />

    <TextView
        android:id="@+id/reelsWarning_TxVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reelsPrivate_checkBox"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:text="Warning: This Post can be seen by Everyone better change it in Private"
        android:textColor="@android:color/holo_red_light"
        android:textSize="14dp"
        android:visibility="gone"
        />


</RelativeLayout>
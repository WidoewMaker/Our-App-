<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"

    >








    <TextView
        android:id="@+id/Chats_User_name_txVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:layout_below="@+id/Chats_User_name_txVw"
        android:id="@+id/Chats_LastSeen_txVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_seen_at_2_08_pm"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"

        />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chats_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:cropToPadding="true"
        android:src="@drawable/profilemiga" />




    </RelativeLayout>